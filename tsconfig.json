{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "lib": ["es6", "DOM", "ES2019"],
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "dist/",
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist/",
    "test/**/*",
    "node_modules"
  ]
}